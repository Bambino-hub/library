{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}

<div class="container">
<h1 class="p1-register ">Liste des utilisateurs</h1>

<table class="table table-success table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.firstname }}</td>
            <td>{{ user.lastname }}</td>
            <td>{{ user.email }}</td>
            <td><a href="#" class="btn btn-danger">Supprimer</a>
                {% if 'ROLE_ADMIN' in user.roles  %}
            <a href="{{ path('app_demote_user',{id: user.id}) }}" class="btn btn-warning">Remove Admin</a>
                {% else %}
            <a href="{{ path('app_promote_user',{id: user.id}) }}" class="btn btn-success">Make Admin</a>
                {% endif %}
            </td>
        </tr>
            {% else %}
                <tr>
                 <td colspan="3">no records found</td>
                </tr>
        {% endfor %}
    </tbody>
</table>
</div>
{% endblock %}
