{% extends 'base.html.twig' %}

{% block title %}
	liste des livre
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="name">Liste des livres
		</h1>
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Email</th>
					<th>CreatedAt</th>
					<th>PublisheAt</th>
					<th>Content</th>
					<th>Status</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for comment in comments %}
					<tr>
						<td>{{ comment.id }}</td>
						<td>{{ comment.name }}</td>
						<td>{{ comment.email }}</td>
						<td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ comment.publisheAt ? comment.publisheAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ comment.content }}</td>
						<td>{{comment.status.value}}</td>
						<td>
							{# <a href="{{ path('app_comment_show', {'id': comment.id}) }}">show</a> #}
							<a href="{{ path('app_comment_edit', {'id': comment.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="8">no records found</td>
					</tr>
					<a href="{{ path('app_comment_new',{id: comment.book.id}) }}">Create new</a>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
